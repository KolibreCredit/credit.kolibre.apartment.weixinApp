.c_tabbar {
  bottom: 0;
  position: fixed;
  height: 50px;
  border-top: 1px solid #dcdcdc;
  width: 100%;
  color: #999;
  background-color: #fff;
  padding: 0;
  z-index: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.c_tabbar .tabbar_item {
  width: 100%;
  font-size: 12px;
  height: 50px;
  text-align: center;
  position: relative;
}
.c_tabbar .tabbar_item .tabbar_item_img {
  position: absolute;
  top: 4px;
  left:50%;
  transform: translateX(-50%);
  width: 28px;
  height: 28px;
}
.c_tabbar .tabbar_item .tabbar_item_title.selected {
  color: #78d;
}

/* big icon */
.c_tabbar .tabbar_item_img.big {
  width: 50px;
  height: 50px;
}

.c_tabbar .tabbar_item_img.overflow {
  position: absolute;
  top: -25px;
}

.c_tabbar .tabbar_item_img.shadow {
  -moz-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.06);
  -webkit-box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.06);
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.06);
}

.c_tabbar .tabbar_item_img.circle {
  border-radius: 50%;
  position: absolute;
  z-index: 2;
}

.tabbar_item_title {
  position: absolute;
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  white-space:nowrap;
}