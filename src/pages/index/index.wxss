/* pages/index/index.wxss */
page {
  background-color: #f4f4f4;
}

.topFilter1 {
  position: relative;
}
.topFilter2 {
  position: fixed;
  top: 0;
  z-index: 2;
}

.search {
  background: #ffffff;
  width: 100%;
  height: 44px;
  border-bottom: 1px solid #e5e5e5;
}

.search .item {
  height: 44px;
  line-height: 44px;
  float: left;
  font-size: 14px;
  color: #646464;
  text-align: center;
  position: relative;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item .line {
  position: absolute;
  right: 0;
  width: 2px;
  height: 16px;
  top: 14px;
}

.item .jiantou {
  width: 14px;
  height: 14px;
  vertical-align: middle;
}

.item .sort {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.item .model {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.item .active {
  color: #fb9328;
}

.apartments {
  height: 50px;
  white-space: nowrap;
  margin-left: 2px;
  margin-right: 2px;
  z-index: 1
}

.apartments .item {
  background: #f5f5f5;
  border-radius: 3px;
  width: 90px;
  height: 30px;
  padding: 0 5px;
  line-height: 30px;
  margin-right: 10px;
  margin-top: 10px;
  font-size: 14px;
  color: #646464;
  text-align: center;
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: inline-block
}

.apartments .item image {
  display: none;
}

.apartments .active {
  background: #FFF3E7;
  color: #fb9329;
}

.apartments .active image {
  display: block;
  width: 20px;
  height: 19px;
  position: absolute;
  right: 0;
  top: 0;
}

.filter {
  position: absolute;
  top: 44px;
  left: 0;
  right: 0;
  height: auto;
  padding-top: 20px;
  z-index: 3;
  background-color: #ffffff;
}

.filter .item {
  text-align: center;
  width: auto;
  font-size: 14px;
  color: #646464;
  height: 40px;
  line-height: 44px;
}

.filter .active {
  color: #fb9328;
}

.viewContent1 {
  margin-top: 0px;
}

.viewContent2 {
  margin-top: 100px;
}