.search {
  background: #ffffff;
  width: 100%;
  height: 44px;
  border-bottom: 1px solid #e5e5e5;
}
.search .item {
  width: 20%;
  height: 44px;
  line-height: 44px;
  float: left;
  font-size: 14px;
  color: #646464;
  text-align: center;
  position: relative;
}

.item .line {
  position: absolute;
  right: 0;
  width: 2px;
  height: 16px;
  top: 14px;
}

.item .jiantou {
  width: 14px;
  height: 14px;
  vertical-align: middle;
}
.item .sort {
  width: 24px;
  height: 24px;
  vertical-align: middle;
}
.item .model{
  width: 24px;
  height: 24px;
  vertical-align: middle;
}

.item .active {
  color: #fb9328;
}
.viewContent1{
  margin-top:0px;
}
.viewContent2{
  margin-top:44px;
}

.filter {
  position: fixed;
  top: 44px;
  left: 0;
  right: 0;
  height: auto;
  padding-top: 20px;
  z-index: 3;
  background-color: #ffffff;
  display: none;
}

.filter .item {
  text-align: center;
  width: auto;
  font-size: 14px;
  color: #646464;
  height: 40px;
  line-height: 44px;
}

.filter .active {
  color: #fb9328;
}