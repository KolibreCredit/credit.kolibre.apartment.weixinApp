/* pages/user/user.wxss */
@import "../../utils/wxStar.wxss";
page {
  background-color: #f8f8f8;
}

.userInfoDiv {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  text-align: center;
}

.bgImg {
  width: 100%;
  height: 242px;
  background-image: url("../../images/user.png") center no-repeat;
  background-size: cover;
}

.userName {
  font-size: 20px;
  color: #ffffff;
  margin-top: 50px;
}

.accountNo {
  margin-top: 5px;
  border: 1px solid #FEC798;
  border-radius: 57px;
  font-size: 14px;
  color: #ffffff;
  padding: 2px 10px;
}

.userInfoDiv image {
  margin-top: 5px;
  width: 120px;
  height: 120px;
}

view.userManageList {
  width: 100%;
  margin: 0;
  margin-top: 25px;
  padding: 0;
  background: #ffffff;
}

view.userManageList li {
  list-style: none;
  height: 60px;
  width: 100%;
  padding-left: 20px;
}

view.userManageList view a {
  display: block;
  position: relative;
  padding-left: 35px;
  font-size: 16px;
  color: #646464;
  height: 60px;
  width: 100%;
  line-height: 60px;
  text-align: left;
  border-bottom: 1px solid #e8e8e8;
}

view.userManageList view a.item1 {
  background-image: url(../../images/list.png) no-repeat;
  background-size: 24px 24px;
  background-position: 0 18px;
}

a.item1 span {
  display: none;
}

view.userManageList view a.item2 {
  background-image: url(../../images//bill.png) no-repeat;
  background-size: 24px 24px;
  background-position: 0 18px;
}

view.userManageList view a.item3 {
  background-image: url(images/credit.png) no-repeat;
  background-size: 24px 24px;
  background-position: 0 18px;
}

view.userManageList view a.item4 {
  background-image: url(../../images/shezhi.png) no-repeat;
  background-size: 24px 24px;
  background-position: 0 18px;
}

view.userManageList view a.item5 {
  background-image: url(../../images/fuwu.png) no-repeat;
  background-size: 24px 24px;
  background-position: 0 18px;
}

view.userManageList view a:after {
  position: absolute;
  right: 20px;
  top: 24px;
  width: 18px;
  height: 18px;
  content: "";
  background-image: url(../../images/ic_grey_arrow.png) no-repeat center;
  background-size: 100% 100%;
}