/* pages/user/user.wxss */
@import "../../utils/wxStar.wxss";
page {
  background-color: #f8f8f8;
}

.bgImg {
  width: 100%;
  height: 130px;
}

.userInfoDiv {
  position: absolute;
  left: 0;
  top: 30px;
  right: 0;
  height: 60px;
}

.userInfoDiv image {
  position: absolute;
  left: 20px;
  width: 60px;
  height: 60px;
}

.userInfoDiv .userName {
  font-size: 20px;
  color: #ffffff;
}

.userInfoDiv .accountNo {
  margin-left: 10px;
  border: 1px solid #FEC798;
  border-radius: 57px;
  font-size: 14px;
  color: #ffffff;
  padding: 2px 10px;
}

.category {
  height: 100px;
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  margin-top: -5px;
  width: 100%;
}

.category .item {
  width: 25%;
  text-align:center;
}

.category .item > image {
  width: 40px;
  height: 40px;
}

.category .item > view {
  color: #646464;
  font-size: 14px;
}

.userManageList {
  width: 100%;
  margin: 0;
  margin-top:10px;
  padding: 0;
  background: #ffffff;
}

.userManageList .item {
  position: relative;
  height: 60px;
  line-height: 60px;
  border-bottom: 1px solid #e8e8e8;
  font-size: 16px;
  color: #646464;
  width: 100%;
}

.icon {
  width: 24px;
  height: 24px;
  top: 18px;
  position: absolute;
  left: 0;
}

.ic_grey_arrow {
  position: absolute;
  right: 0;
  top: 21px;
  width: 18px;
  height: 18px;
}

.item text {
  position: absolute;
  left: 30px;
}